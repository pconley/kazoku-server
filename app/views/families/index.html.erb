<p id="notice"><%= notice %></p>

<h1>Families</h1>

<table class="table table-striped" >
  <thead>
    <tr>
		<th>ID</th>
      	<th>Name</th>
      	<th>Spouse 1</th>
      	<th>Spouse 2</th>
      	<th>Children</th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
		
      <tr>
		<td><%= family.id %></td>
		<td>
			<%= image_tag("family.png", size: "20x20") %>
			<%= link_to family.display_name, family %>
		</td>
        <td>
			<% if family.members[0] %>
			<%= image_tag("member.png", size: "20x20") %>
			<%= link_to family.members[0].try(:full_name), family.members[0] %>
			<% end %>
		</td>
        <td>
			<% if family.members[1] %>
			<%= image_tag("member.png", size: "20x20") %>
			<%= link_to family.members[1].try(:full_name), family.members[1] %>
			<% end %>
		</td>
        <td><%= family.children.count > 0 ? family.children.count : '' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

