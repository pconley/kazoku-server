<!DOCTYPE html>
<html>
  <head>
    <title>Kazoku</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  
	  <nav class="navbar navbar-default">
	    <div class="container-fluid">
	      <!-- Brand and toggle get grouped for better mobile display -->
	      <div class="navbar-header">
	        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	          <span class="sr-only">Toggle navigation</span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </button>
		  	  <% if current_user %>
				<%= link_to 'Kazuko', families_path, class: "navbar-brand"  %>
			 <% else %>
				<%= link_to 'Kazuko', root_path, class: "navbar-brand"  %>	
			  <% end %>		
	      </div>

	      <!-- Collect the nav links, forms, and other content for toggling -->
	      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			  
	        <ul class="nav navbar-nav">
				<% fam_class = '' %>
				<% mem_class = '' %>
				
				<% if controller_name == 'families' %>
					<% fam_class = 'active' %>
				<% elsif controller_name == 'people' %>
					<% mem_class = 'active' %>				
				<% end %>
				
		  	  <% if current_user %>
	          	<li class="<%= fam_class %>"><%= link_to 'Families', families_path %></a></li>
	            <li class="<%= mem_class %>"><%= link_to 'Members', people_path %></li>
			  <% end %>
	        </ul>
			
		  	<% if current_user %>				
				<%= form_tag(people_path, :method => "get", id: "search-form", class: "navbar-form navbar-left") do %>
				    <%= text_field_tag :search, params[:search], placeholder: "Search People", class: "form-control"%>
				    <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
				<% end %>
				
			<% end %>
			
	        <ul class="nav navbar-nav navbar-right">		
			  	<% if current_user %>
			  		<li><%= link_to current_user.email, "#" %></li>
			  		<li><%= link_to 'Logout', logout_path %></li>
			  	<% else %>
			  		<li><%= link_to 'Sign In', new_user_session_path %></li>
			  	<% end %>				  
	        </ul>
			
	      </div><!-- /.navbar-collapse -->
	    </div><!-- /.container-fluid -->
	  </nav>
	  
  	<% flash.each do |name, msg| %>
  		<div class="alert alert-warning">
  			<button type="button" class="close" data-dismiss="alert">&times;</button>
  			<%= msg %>
  		</div>
  	<% end %>
	   
    <%= yield %>
	
  </body>
  
</html>